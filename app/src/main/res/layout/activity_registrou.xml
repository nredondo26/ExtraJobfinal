<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrou">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <android.support.constraint.ConstraintLayout
                android:layout_width="398dp"
                android:layout_height="710dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/nombre2"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/backwithborder"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:ems="10"
                    android:hint="@string/persona_de_contacto"
                    android:inputType="number"
                    android:padding="6dp"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="18sp"
                    android:theme="@style/CampoTextoPurpura"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_documentos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/spinner_documentos"
                    app:layout_constraintTop_toTopOf="@+id/spinner_documentos"
                    tools:ignore="Autofill,MissingConstraints,RtlSymmetry"
                    tools:targetApi="o" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="118dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/icono_extrajob"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/extrajob"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/backwithborder"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:ems="10"
                    android:hint="@string/persona_de_contacto"
                    android:inputType="textPersonName"
                    android:padding="6dp"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="18sp"
                    android:theme="@style/CampoTextoPurpura"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    tools:ignore="Autofill,RtlSymmetry"
                    tools:targetApi="o" />

                <Spinner
                    android:id="@+id/spinner_documentos"
                    android:layout_width="83dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_style"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="18sp"
                    android:theme="@style/CampoTextoPurpura"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nombre"
                    tools:ignore="Autofill,MissingConstraints,RtlSymmetry" />


                <Button
                    android:id="@+id/bregistrou"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/reg_strate"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>